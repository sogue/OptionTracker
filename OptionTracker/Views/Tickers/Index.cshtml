@model API.Helpers.Pagination<Ticker>

@{
    ViewData["Title"] = "Index";
}

<h3>Tickers</h3>
<div class="input-group-sm">
    <div>
        <a asp-action="Create">Add Ticker</a>
    </div>
</div>
<form asp-action="Index" method="get">
    <div class="input-group-sm">
        <p>
            Find: <input type="text" name="Search" value="" />
            <input type="submit" value="Search" class="btn" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<form class="d-inline-flex"asp-action="Index" method="get">
    <div class="input-group-sm">
        <div>
            <input type="number" class="form-control col-3" name="PageIndex" value="@Model.PageIndex" />
        </div>
        <div>
            <input type="submit" class="btn col-3" value="Go"/>
        </div>
     
    </div>
</form>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().Symbol)
            </th>
            <th>
                <form asp-action="Index" method="get">
                    <input type="hidden" name="PageIndex" value="@Model.PageIndex" />
                    <input type="hidden" name="PageSize" value="@Model.PageSize" />
                    <input type="hidden" name="Sort" value="priceDesc" />
                    <input type="submit" value="@Html.DisplayNameFor(model => model.Data.FirstOrDefault().ClosePrice)" />
                </form>
            </th>
            <th>
                <form asp-action="Index" method="get">
                    <input type="hidden" name="PageIndex" value="@Model.PageIndex" />
                    <input type="hidden" name="PageSize" value="@Model.PageSize" />
                    <input type="hidden" name="Sort" value="capDesc" />
                    <input type="submit" value="@Html.DisplayNameFor(model => model.Data.FirstOrDefault().MarketCap)" />
                </form>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().LastOptionVolume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().OptionVolumeChange)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().NextEarnings)
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarketCap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastOptionVolume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionVolumeChange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextEarnings)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Add to Watchlist</a> |
                <a asp-controller="DateChains"
                   asp-action="@item.Symbol">
                    Option Chains
                </a> |
                <a asp-action="Details" asp-route-id="@item.Symbol">Most Active Options</a>
                | <a asp-controller="VolumeAnals" asp-action="Details" asp-route-id="@item.Symbol">Daily Option Volume</a>
            </td>
        </tr>
        }
    </tbody>
</table>
