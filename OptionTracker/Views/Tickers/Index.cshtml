@model IEnumerable<OptionTracker.Models.Ticker>

@{
    ViewData["Title"] = "Index";
}

<h1>Tickers</h1>

<p>
    <a asp-action="Create">Add Ticker</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Symbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClosePrice)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosePrice)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Add to Watchlist</a> |
                <a asp-controller="DateChains"
                   asp-action="@item.Symbol">
                    Option Chains
                </a> |
                <a asp-action="Details" asp-route-id="@item.Symbol">Most Active Options</a>
            </td>
        </tr>
        }
    </tbody>
</table>
